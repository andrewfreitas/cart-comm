{
    "compilerOptions": {
        "target": "es6",
        "lib": [
          "es2019"
        ],
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
